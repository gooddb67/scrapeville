<p id="notice"><%= notice %></p>

<p>
  <strong>View:</strong>
  <%= link_to "Original Story", @newsville.title_url, :target => "_" %></td>
</p>

<p>
  <strong>Title:</strong>
  <%= @newsville.title %>
</p>

<p>
  <strong>Heading:</strong>
  <%= @newsville.body %>
</p>

<p>
  <strong>Posted:</strong>
   <%= time_ago_in_words(@newsville.created_at) %> ago
</p>

<p>
  <strong>Story Image:</strong><br />
   <% if @newsville.image_url.present? %>
    <td><%= image_tag @newsville.image_url %></td>
  <% else %>
    <td><%= image_tag 'nia.jpeg' %></td>
  <% end %>
</p>

<hr>

<%= render @newsville.comments %>
  <%= simple_form_for [@newsville, Comment.new] do |comment| %>
    <%= comment.input :body, label: false, placeholder: "Add your comments here" %>
    <%= comment.submit "Add Comment", class: "btn btn-danger" %>
    <% end %>
    <hr>
    <%= link_to 'Back to Newsville', newsvilles_path, class: "btn btn-info xs" %>
